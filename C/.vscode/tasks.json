        {
            "label": "run and redirect output",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "${fileDirname}/${fileBasenameNoExtension} > /media/labiras/D66A04956A047511/Users/nicol/Documents/Codigos/C/output/"
            ],
            "group": "test",
            "dependsOn": "C/C++: gcc build active file",
